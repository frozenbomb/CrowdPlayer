<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crowdplayer.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/top_group">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignBottom="@+id/play_pause_button"
            android:layout_toRightOf="@+id/play_pause_button"
            android:layout_toEndOf="@+id/play_pause_button"
            android:layout_alignParentRight="true"/>

        <TextView
            android:text="No song selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/play_pause_button"
            android:id="@+id/song_title_textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_title_textView"
            android:layout_toRightOf="@+id/play_pause_button"
            android:id="@+id/song_artist_textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="PLAY"
            android:onClick="play"
            android:id="@+id/play_pause_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_group"
        android:id="@+id/playlist_listView"
        android:layout_above="@+id/search_box"/>

    <SearchView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/search_box"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/search_box"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button"
        tools:text="Search"
        android:onClick="search"
        android:text="Search" />


</RelativeLayout>
